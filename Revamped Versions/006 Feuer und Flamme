    <!-- Change Audio iframe color script, by @shudesigns. -->
    <script>
        $(document).ready(function() {
            $('iframe.tumblr_audio_player').load( function() {
                // Audio Fallback Background
                $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .audio-player{background:{color:Accent 2} !important} </style>"));
                // Audio Gradient Background
                {block:IfGradients}
                $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .audio-player{background:linear-gradient(to bottom right, {color:Accent 1}, {color:Accent 3}) !important} </style>"));
                {/block:IfGradients}    
                 // Audio Track Color
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .track-name{color:{color:Tooltip Text} !important} </style>"));
                 // Audio Artist Color
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .track-artist{color:{color:Tooltip Text} !important} </style>"));
                 // Audio Play Button Color
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .play-pause{color:{color:Tooltip Text} !important} </style>"));
            });
        });
    </script>
    
