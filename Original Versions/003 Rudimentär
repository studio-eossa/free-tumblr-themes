    <script>
        $(document).ready(function() {
            $('iframe.tumblr_audio_player').load( function() {
                // Audio Fallback Background
                $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .audio-player{background:{color:Body Background} !important} </style>"));
                 // Audio Track Color
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .track-name{color:{color:Text Color} !important} </style>"));
                 // Audio Artist Color
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .track-artist{color:{color:Text Color} !important} </style>"));
                 // Audio Play Button Color
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .play-pause{color:{color:Text Color} !important} </style>"));
            });
        });
    </script>
    
