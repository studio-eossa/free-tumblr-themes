                <a class="specs" href="{TagURL}" title="tagged as: {Tag}">
                    <mark>
                        # {Tag}
                    </mark>
                </a>
                {/block:Tags}
                </div><!-- /tags -->
                {block:IfShowTags}
                {block:IfNotShowTags}
                    {block:PermalinkPage}
                    <div class="tags">
                    {block:Tags}
                    <a class="specs" href="{TagURL}" title="tagged as: {Tag}">
                        <mark>
                            # {Tag}
                        </mark>
                    </a>
                    {/block:Tags}
                    </div><!-- /tags -->
                    {/block:PermalinkPage}
                {/block:IfNotShowTags}
                {/block:HasTags}
                </div><!-- /post footer -->
    
                {block:PermalinkPage}
                {block:NoteCount}
                {block:PostNotes}
                {PostNotes}
                {/block:PostNotes}
                {/block:NoteCount}
                {/block:PermalinkPage}
            </article>
            {/block:Posts}
            
            <!-- RESPONSIVE FOOTER -->
            <div id="r-footer">
                <!-- PAGINATION -->
                <div id="r-pagi-box">
                {block:Pagination}
                    <!-- Previous Page -->
