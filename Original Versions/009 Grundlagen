    <!-- Change Audio iframe color script, by @shudesigns. -->
    <script>
        $(document).ready(function() {
            $('iframe.tumblr_audio_player').load( function() {
                // Audio Fallback Background
                $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .audio-player{background:{color:Chat} !important} </style>"));
                 // Audio Track Color
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .track-name{color:{color:Links} !important} </style>"));
                 // Audio Artist Color
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .track-artist{color:{color:Links} !important} </style>"));
                 // Audio Play Button Color
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .play-pause{color:{color:Links} !important} </style>"));
            });
        });
    </script>
    
