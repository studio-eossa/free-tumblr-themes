    <script>
        $(document).ready(function() {
            $('iframe.tumblr_audio_player').load( function() {
                $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .audio-player{background:{color:Purple Accent} !important} </style>"));
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .track-name{color:{color:Post Background} !important} </style>"));
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .track-artist{color:{color:Post Background} !important} </style>")); 
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .play-pause{color:{color:Post Background} !important} </style>"));    
            });
        });
    </script>
    
