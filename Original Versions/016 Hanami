        $(document).ready(function() {
            $('iframe.tumblr_audio_player').load( function() {
                $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .audio-player{background:{color:Accent 3} !important} </style>"));
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .track-name{color:{color:Accent 6} !important} </style>"));
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .track-artist{color:{color:Accent 6} !important} </style>"));
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .play-pause{color:{color:Accent 6} !important} </style>"));
            });
        });
    </script>

