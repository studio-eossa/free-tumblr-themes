                {block:PreviousPage}
                <a href="{PreviousPage}" class="pagilink" title="previous page">
                    <div class="pagi">
                        <span class="ri-arrow-left-line" aria-hidden="true"></span> 
                        previous
                    </div>
                </a>
                {/block:PreviousPage}
                
                <div id="pagi-text">
                    Page {CurrentPage} out of {TotalPages} Pages
                </div>
                
                {block:NextPage}
                <a href="{NextPage}" class="pagilink" title="next page">
                    <div class="pagi">
                        next <span class="ri-arrow-right-line" aria-hidden="true"></span>
                    </div>
                </a>
                {/block:NextPage}
            </div> <!-- // end pagination -->
            {/block:Pagination}
            </div> <!-- // end posts -->
        </div>
        
