            /*** HEADER ***/
            header{
                width:100vw;
                height:100vh;
                top:0;
                left:0;
                display:flex;
                align-items:center;
                justify-content:center;
                position:absolute;
                z-index:100!important;
                background-color:{color:Accent 1}; /* background color */
                background-image:url("{image:Header}"); /* bg image */
                background-size:{text:Background Size}; /* bg size */
                background-attachment:fixed;
                background-repeat:{select:Background Repeat};
            }

            #h-contain{
                width:60vw;
                height:40vh;
                background-color:rgba({RGBcolor:Accent 3},0.9);/* transparent */
                box-shadow:4px 4px {color:Accent 1}, 8px 8px {color:Accent 2}; /* box shadows */
                display:flex;
                align-items:center;
                justify-content:center;
                flex-direction:column;
            }

            #h-title{
                font-size:calc(5 * {select:Font Size});
                text-shadow:2px 2px {color:Accent 1}, 4px 4px {color:Accent 2}; /* text shadows */
                margin-top:0.75em;
            }

            #h-down{
                margin-top:2em;
                width:50px;
                height:50px;
                display:flex;
                align-items:center;
                justify-content:center;
                transition:0.5s;
                -moz-transition:0.5s;
                -o-transition:0.5s;
                -webkit-transition:0.5s;
            }

            #h-down:hover{
                transform:translateY(5px); /* down movement */
                transition:0.5s;
                -moz-transition:0.5s;
                -o-transition:0.5s;
                -webkit-transition:0.5s;
            }

            #h-down i.fas{
                font-size:calc(1.5 * {select:Font Size});
            }

            a.down{
                text-decoration:none; /* no text decoration */
                border-bottom:none; /* no bottom border */
            }

            /* Important! */
            /* Without these, the header will appear on every site. */
            .item-wrapper{
                display:none; /* hidden */
            }

            .page-1{
                display:block;
            }

            #else{
                width:100vw;
                height:100vh;
                display:flex;
                align-items:center;
                justify-content:flex-start;
            }

            #main{
                width:70vw;
                height:100vh;
                display:flex;
                align-items:flex-start;
                justify-content:space-between;
                flex-direction:column;
            }

            #sidebar{
                width:30vw;
                height:100vh;
                top:0;
                left:0;
                background-color:{color:Accent 2}; /* background color */
                display:flex;
                align-items:center;
                justify-content:center;
                flex-direction:column;
                position:fixed;
            }

            #s-image img{
                width:96px; /* image width */
                height:96px; /* image height */
                box-shadow:4px 4px {color:Accent 1}; /* box shadow */
            }

            #s-title{
                font-size:calc(2 * {select:Font Size});
                text-shadow:2px 2px {color:Accent 1}; /* text shadow */
            }

            /* Sidebar Navigation */
            #s-nav{
                width:80%;
                height:auto;
                display:flex;
                align-items:center;
                justify-content:center;
                flex-direction:column;
            }

            a.s-link{
                color:{color:Text Color}; /* text color */
                text-decoration:none; /* no text decoration */
                border-bottom:none; /* no bottom border */
            }

            /* Sidebar Links */
            .s-links{
                width:15vw;
                background-color:{color:Accent 3}; /* background color */
                box-shadow:2px 2px {color:Accent 1}; /* box shadow */
                margin-bottom:0.5em;
                padding:0 0.25em;
                transition:0.5s;
                -moz-transition:0.5s;
                -o-transition:0.5s;
                -webkit-transition:0.5s;
            }

            /* Sidebar Links Hover */
            .s-links:hover{
                background-color:{color:Accent 1}; /* background color */
                box-shadow:2px 2px {color:Accent 3}; /* box shadow */
                transition:0.5s;
                -moz-transition:0.5s;
                -o-transition:0.5s;
                -webkit-transition:0.5s;
            }

            /* Searchbar */
            /* Button */
            .openBtn {
                background: {color:Accent 3}; /* background color */
                box-shadow:2px 2px {color:Accent 1}; /* box shadow */
                font-family:{select:Font}; /* custom font */
                color:{color:Text Color}; /* text color */
                text-align:{select:Text Align}; /* text align */
                width:calc(15vw + 8px);
                border: none;
                padding: 0 0.5em;
                cursor: pointer;
                font-size:{select:Font Size}; /* font size */
                font-weight:400; /* normal */
                transition:0.5s;
                -moz-transition:0.5s;
                -o-transition:0.5s;
                -webkit-transition:0.5s;
            }

            /* Button on Hover */
            .openBtn:hover {
                background: {color:Accent 1}; /* background color */
                box-shadow:2px 2px {color:Accent 3}; /* box shadow */
                color:{color:Text Color}; /* text color */
                transition:0.5s;
                -moz-transition:0.5s;
                -o-transition:0.5s;
                -webkit-transition:0.5s;
            }

            /* Searchbar Overlay */
            .overlay {
                height: 100%;
                width: 100%;
                display: none;
                position: fixed;
                z-index: 1000!important;
                top: 0;
                left: 0;
                background-color: {color:Accent 1};
                /* background color */
            }

            /* Overlay Content */
            .overlay-content {
                position: relative;
                top: 46%;
                width: 80%;
                text-align: center;
                margin-top: 30px;
                margin: auto;
            }

            /* Close Button */
            .overlay .closebtn {
                position: absolute;
                top: 20px;
                right: 45px;
                font-size: calc(3.75 * {select:Font Size});
                cursor: pointer;
                color: {color:Text Color}; /* text color */
                transition:0.5s;
                -moz-transition:0.5s;
                -o-transition:0.5s;
                -webkit-transition:0.5s;
            }

            /* Close Button on Hover */
            .overlay .closebtn:hover {
                color: {color:Accent 2}; /* text color */
                transition:0.5s;
                -moz-transition:0.5s;
                -o-transition:0.5s;
                -webkit-transition:0.5s;
            }

            /* Searchbar */
            .overlay input[type=text] {
                padding: {select:Font Size};
                font-size: {select:Font Size};
                border: none;
                float: left;
                width: 80%;
                background: {color:Accent 3}; /* background color */
            }

            /* Searchbar on Hover */
            .overlay input[type=text]:hover {
                background: {color:Body Background}; /* background color */
            }

            /* Search Button */
            .overlay button {
                float: left;
                width: calc(20% - (2 * {select:Font Size}));
                padding: {select:Font Size};
                background: {color:Accent 3}; /* background color */
                font-size: {select:Font Size};
                border: none;
                cursor: pointer;
                transition:0.5s;
                -moz-transition:0.5s;
                -o-transition:0.5s;
                -webkit-transition:0.5s;
            }

            /* Search Button on Hover */
            .overlay button:hover {
                background: {color:Body Background};
                /* background color */
                transition:0.5s;
                -moz-transition:0.5s;
                -o-transition:0.5s;
                -webkit-transition:0.5s;
            }

            /** PAGINATION **/
            .pagination{
                background-color:{color:Accent 1}; /* background color */
                width:100%;
                height:10%;
                bottom:0;
                left:0;
                z-index:10!important;
                box-sizing:border-box;
                position:absolute;
                display:flex;
                align-items:center;
                justify-content:center;
