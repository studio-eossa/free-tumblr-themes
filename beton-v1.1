        <style>

            body{
                margin:0;
                font-size:{select:Font Size}; /* font size */
                color:{color:Text Color}; /* text color */
                font-family:{select:Font}, {select:Fallback};
                /* custom font, fallback font */
                background-color:{color:Body Background};
                /* background color */
                overflow-x:hidden; /* no horizontal scroll */
                text-align:{select:Text Align}; /* text align */
            }

            /* Custom Text Selection */
            ::selection{
                background-color:{color:Accent 1}; /* background color */
                color:{color:Text Color}; /* text color */
            }

            ::-moz-selection{
                background-color:{color:Accent 1}; /* background color */
                color:{color:Text Color}; /* text color */
            }

            ::-o-selection{
                background-color:{color:Accent 1}; /* background color */
                color:{color:Text Color}; /* text color */
            }

            ::-webkit-selection{
                background-color:{color:Accent 1}; /* background color */
                color:{color:Text Color}; /* text color */
            }

            /* Custom Scrollbar */
            ::-webkit-scrollbar{
                width:10px; /* scrollbar width */
                background-color:{color:Accent 1};
                /* scrollbar background */
                border-left:4px solid {color:Accent 2}; /* left border */
                border-right:4px solid {color:Accent 2}; /* right border */
            }

            ::-webkit-scrollbar-thumb{
                width:10px; /* thumb (draggable part) with */
                background-color:{color:Accent 2}; /* background color */
                border:4px solid {color:Accent 1}; /* border */
            }

            /* Custom Tooltips */
            .tippy-tooltip.beton-theme{
                background-color:{color:Accent 1};
                color:{color:Text Color};
                text-align:left;
                text-transform:lowercase;
                font-weight:300;
            }

            .tippy-tooltip.beton-theme .tippy-svg-arrow{
                fill:{color:Accent 1};
            }

            /** TEXT STYLES **/
            /* Marked Text */
            mark{
                background-color:{color:Accent 1}; /* background color */
                padding:0 0.25em;
                /* 0 top / bottom padding , 4px left / right padding */
            }

            /* Underlined Text */
            u{
                text-decoration:none; /* no text-decoration */
                border-bottom:2px solid {color:Text Color};
                /* bottom border */
            }

            /* Bold Text */
            b, strong{
                font-weight:700; /* bold text */
            }

            /* Italic Text */
            i, em{
                font-weight:300; /* light text */
                font-style:italic; /* italic */
            }

            /* Links */
            a{
                text-decoration:none; /* no text-decoration */
                color:{color:Text Color}; /* text color */
                border-bottom:2px solid {color:Accent 2};
                /* bottom border */
                transition:0.5s;
                -moz-transition:0.5s;
                -o-transition:0.5s;
                -webkit-transition:0.5s;
            }

            a:hover{
                border-bottom:2px solid {color:Accent 1};
                /* bottom border */
                transition:0.5s;
                -moz-transition:0.5s;
                -o-transition:0.5s;
                -webkit-transition:0.5s;
            }

            /* Empty Paragraphs */
            p:empty{
                display:none; /* hidden */
            }

            /* Headings */
            h1{
                font-size:calc(1.5 * {select:Font Size});
                font-weight:400; /* normal */
            }

            h2{
                font-size:calc(1.25 * {select:Font Size});
                font-weight:300; /* light */
            }

            /* Line Break */
            hr{
                width:80%;
                height:4px; /* line height */
                border:none; /* no border */
                background-color:{color:Accent 1}; /* background color */
                box-shadow:2px 2px {color:Accent 2};
                /* margin left, margin top, color */
            }

            /* Preformatted Text */
            pre{
                font-family:"Roboto Mono", "Times New Roman";
                word-wrap:break-all;
                white-space:pre-wrap;
                font-size:calc({select:Font Size} - 2px);
                background-color:{color:Accent 2}; /* background color */
                padding:0.25 0.5em;
            }

            /* Lists */
            /* Unordered List */
            ul{
                list-style-type:{select:Unordered List};
            }

            /* Ordered List */
            ol{
                list-style-type:{select:Ordered List};
            }

            /** SPECIAL FONTS **/
            /* Quirky Font */
            p.npf_quirky{
                /*Tumblr uses Fairwater as a font for .npf_quirky, but                    since it's not a free font, I have used this alternative.*/
                font-family: 'Dancing Script', cursive;
                font-size:calc(1.5 * {select:Font Size});

            }

            /* Chat Font */
            p.npf_chat{
                font-family:Courier;

            }

            /* Quote Font */
            p.npf_quote{
                /*Tumblr uses Calluna as a font for .npf_quote, but since                 it's not a free font, I have used these alternatives.*/
                font-family:"Cormorant Garamond", "Palatino";
