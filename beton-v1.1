            .pagination a{
                border-bottom:none; /* no bottom border */
            }

            /* Pagination Mark */
            .pagination mark{
                background-color:{color:Accent 3}; /* background color */
                box-shadow:2px 2px {color:Accent 2}; /* box shadow */
