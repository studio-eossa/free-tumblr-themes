        <script>
        $(document).ready(function(){
           $('.photo-slideshow').pxuPhotoset({
               lightbox: true,
               rounded: false,
               gutter: '{text:Photoset Gutter}px',
               borderRadius: '0px',
               photoset: '.photo-slideshow',
               photoWrap: '.photo-data',
               photo: '.pxu-photo'
           });
        });
        </script>

        <!--Smooth Header Scrolling script. -->
        <script type="text/javascript">
            $(function() {
                $('#h-down').click (function() {
                  $('html, body').animate({scrollTop: $('#posts').offset().top }, 2500);
                  return false;
                });
              });
        </script>

        {block:HomePage}
        <!-- Script for #posts. -->
        <script type="text/javascript">

           if ({CurrentPage} > 1 ) {
               $('#posts').css({'margin-top':'0px'});
           }

        </script>
        {/block:HomePage}

        <!-- Full page searchbox script. -->
        <script>
            function openSearch() {
                document.getElementById("myOverlay").style.display = "block";
            }

            function closeSearch() {
                document.getElementById("myOverlay").style.display = "none";
            }
        </script>

        <!-- Script hiding the footer if there is only one page. -->
            <!-- by @silbrigthemes -->
            <script type="text/javascript">
                if({TotalPages} < 2){
                    $('#pagi-footing').css({'display':'none'});
                }
            </script>

